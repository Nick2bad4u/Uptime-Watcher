{
    "$schema": "https://www.schemastore.org/htmlhint.json",
    "tagname-lowercase": true,
    "attr-lowercase": true,
    "attr-value-double-quotes": true,
    "attr-value-not-empty": false,
    "attr-no-duplication": true,
    "attr-unsafe-chars": true,
    "doctype-first": true,
    "doctype-html5": true,
    "tag-pair": true,
    "tag-self-close": true,
    "spec-char-escape": true,
    "id-unique": true,
    "src-not-empty": true,
    "title-require": true,
    "alt-require": true,
    "id-class-value": false,
    "style-disabled": false,
    "inline-style-disabled": false,
    "inline-script-disabled": true,
    "space-tab-mixed-disabled": "space",
    "id-class-ad-disabled": true,
    "href-abs-or-rel": false,
    "head-script-disabled": false,
    "html-lang-require": true,
    "meta-charset-require": true,
    "meta-viewport-require": false,
    "button-type-require": true,
    "input-requires-label": true,
    "frame-title-require": true,
    "tag-no-obsolete": true,
    "attr-value-no-duplication": true,
    "attr-no-unnecessary-whitespace": true,
    "tagname-specialchars": true,
    "h1-require": false,
    "main-require": false,
    "meta-description-require": false
}
