{
    "$schema": "vscode://schemas/launch",
    "compounds": [
        {
            "configurations": ["üöÄ Start Development Mode"],
            "name": "üöÄ Normal Development",
            "presentation": {
                "group": "Development",
                "hidden": false,
                "order": 2
            },
            "stopAll": true
        },
        {
            "configurations": ["üîÑ Vite + Electron Dev"],
            "name": "‚ö° Vite + Electron Debug",
            "presentation": {
                "group": "Debugging",
                "hidden": false,
                "order": 2
            },
            "stopAll": true
        },
        {
            "configurations": [
                "üîß Vite Dev Server",
                "üóÑÔ∏è Debug Electron Main (Fixed DB)",
                "üåê Electron Renderer"
            ],
            "name": "üî¨ Full Debug Suite (Recommended)",
            "presentation": {
                "group": "Debugging",
                "hidden": false,
                "order": 2
            },
            "stopAll": true
        }
    ],
    "configurations": [
        {
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development",
                "NODE_OPTIONS": "--max_old_space_size=8192"
            },
            "experimentalNetworking": "auto",
            "name": "üöÄ Start Development Mode",
            "nodeVersionHint": 24,
            "presentation": {
                "group": "Development",
                "hidden": true,
                "order": 1
            },
            "request": "launch",
            "runtimeArgs": ["run", "dev:with-sqlite3"],
            "runtimeExecutable": "npm",
            "skipFiles": ["<node_internals>/**"],
            "sourceMaps": true,
            "type": "node"
        },
        {
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development",
                "NODE_OPTIONS": "--max_old_space_size=8192"
            },
            "experimentalNetworking": "auto",
            "name": "üîß Vite Dev Server",
            "nodeVersionHint": 24,
            "presentation": {
                "group": "Development",
                "hidden": true,
                "order": 1
            },
            "request": "launch",
            "runtimeArgs": ["run", "dev:with-sqlite3"],
            "runtimeExecutable": "npm",
            "skipFiles": ["<node_internals>/**"],
            "sourceMaps": true,
            "type": "node"
        },
        {
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development",
                "NODE_OPTIONS": "--max_old_space_size=8192"
            },
            "experimentalNetworking": "auto",
            "name": "üîÑ Vite + Electron Dev",
            "nodeVersionHint": 24,
            "presentation": {
                "group": "Development",
                "hidden": true,
                "order": 1
            },
            "request": "launch",
            "runtimeArgs": ["run", "electron-dev"],
            "runtimeExecutable": "npm",
            "skipFiles": ["<node_internals>/**"],
            "sourceMaps": true,
            "type": "node"
        },
        {
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "ELECTRON_IS_DEV": "true",
                "NODE_ENV": "development",
                "NODE_OPTIONS": "--max_old_space_size=8192"
            },
            "experimentalNetworking": "auto",
            "name": "üêõ Debug Electron Main",
            "nodeVersionHint": 24,
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "outputCapture": "std",
            "preLaunchTask": "Build Electron Main (Dev)",
            "presentation": {
                "group": "Debugging",
                "hidden": true,
                "order": 1
            },
            "request": "launch",
            "runtimeArgs": [
                "${workspaceFolder}/dist/main.js",
                "--remote-debugging-port=9223"
            ],
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "skipFiles": ["<node_internals>/**"],
            "sourceMaps": true,
            "type": "node",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            }
        },
        {
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "ELECTRON_IS_DEV": "true",
                "NODE_ENV": "development"
            },
            "experimentalNetworking": "auto",
            "name": "üóÑÔ∏è Debug Electron Main (Fixed DB)",
            "nodeVersionHint": 24,
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "outputCapture": "std",
            "preLaunchTask": "Build Electron Main (Dev)",
            "presentation": {
                "group": "Debugging",
                "hidden": true,
                "order": 1
            },
            "request": "launch",
            "runtimeArgs": [
                "${workspaceFolder}/dist/main.js",
                "--remote-debugging-port=9222",
                "--user-data-dir=${env:APPDATA}\\uptime-watcher"
            ],
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "skipFiles": ["<node_internals>/**"],
            "sourceMaps": true,
            "type": "node",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            }
        },
        {
            "name": "üåê Electron Renderer",
            "port": 9222,
            "presentation": {
                "group": "Debugging",
                "hidden": true,
                "order": 1
            },
            "request": "attach",
            "timeout": 90000,
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "args": ["--ui"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "experimentalNetworking": "auto",
            "name": "üß™ Vitest Debug UI",
            "nodeVersionHint": 24,
            "presentation": {
                "group": "Debugging",
                "hidden": true,
                "order": 1
            },
            "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
            "request": "launch",
            "sourceMaps": true,
            "type": "node"
        },
        {
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "experimentalNetworking": "auto",
            "name": "üß™ Run Tests",
            "presentation": {
                "group": "Testing",
                "hidden": false,
                "order": 1
            },
            "request": "launch",
            "runtimeArgs": ["run", "test"],
            "runtimeExecutable": "npm",
            "type": "node"
        },
        {
            "args": ["run", "${relativeFile}"],
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "experimentalNetworking": "auto",
            "name": "üîç Debug Current Test File",
            "nodeVersionHint": 24,
            "presentation": {
                "group": "Testing",
                "hidden": false,
                "order": 1
            },
            "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
            "request": "launch",
            "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
            "smartStep": true,
            "sourceMaps": true,
            "type": "node"
        }
    ],
    "inputs": [
        {
            "description": "Select the environment to use",
            "id": "selectEnvironment",
            "options": [
                {
                    "label": "Development",
                    "value": "development"
                },
                {
                    "label": "Production",
                    "value": "production"
                }
            ],
            "type": "pickString"
        }
    ],
    "version": "0.2.0"
}
