{
    "compounds": [
        {
            "configurations": ["🚀 Start Development Mode"],
            "name": "🎯 Normal Development",
            "stopAll": true
        },
        {
            "configurations": ["🔄 Vite + Electron Dev"],
            "name": "⚡ Vite + Electron Debug",
            "stopAll": true
        },
        {
            "configurations": [
                "🔧 Vite Dev Server",
                "🗄️ Debug Electron Main (Fixed DB)",
                "🌐 Electron Renderer"
            ],
            "name": "🔬 Full Debug Suite (Recommended)",
            "stopAll": true
        }
    ],
    "configurations": [
        {
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            },
            "name": "🚀 Start Development Mode",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "dev:with-sqlite3"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": ["<node_internals>/**"],
            "type": "node"
        },
        {
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "name": "🔧 Vite Dev Server",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "dev:with-sqlite3"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": ["<node_internals>/**"],
            "type": "node"
        },
        {
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            },
            "name": "🔄 Vite + Electron Dev",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "electron-dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": ["<node_internals>/**"],
            "type": "node",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            }
        },
        {
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "ELECTRON_IS_DEV": "true",
                "NODE_ENV": "development"
            },
            "name": "🐛 Debug Electron Main",
            "outFiles": ["${workspaceFolder}/dist-electron/**/*.js"],
            "outputCapture": "std",
            "preLaunchTask": "Build Electron Main (Dev)",
            "request": "launch",
            "runtimeArgs": [
                "${workspaceFolder}/dist-electron/main.js",
                "--remote-debugging-port=9223"
            ],
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "skipFiles": ["<node_internals>/**"],
            "type": "node",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            }
        },
        {
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "ELECTRON_IS_DEV": "true",
                "NODE_ENV": "development"
            },
            "name": "🗄️ Debug Electron Main (Fixed DB)",
            "outFiles": ["${workspaceFolder}/dist-electron/**/*.js"],
            "outputCapture": "std",
            "preLaunchTask": "Build Electron Main (Dev)",
            "request": "launch",
            "runtimeArgs": [
                "${workspaceFolder}/dist-electron/main.js",
                "--remote-debugging-port=9223",
                "--user-data-dir=${env:APPDATA}\\uptime-watcher"
            ],
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "skipFiles": ["<node_internals>/**"],
            "type": "node",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            }
        },
        {
            "name": "🌐 Electron Renderer",
            "port": 9223,
            "request": "attach",
            "timeout": 30000,
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "args": ["--ui"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "name": "🧪 Vitest Debug UI",
            "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
            "request": "launch",
            "type": "node"
        },
        {
            "console": "integratedTerminal",
            "name": "🧪 Run Tests",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "test"
            ],
            "runtimeExecutable": "npm",
            "type": "node"
        },
        {
            "args": [
                "run",
                "${relativeFile}"
            ],
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal",
            "name": "🔍 Debug Current Test File",
            "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "smartStep": true,
            "type": "node"
        },
        {
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "production"
            },
            "name": "🚀 Launch Production Build",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "start:prod"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": ["<node_internals>/**"],
            "type": "node"
        }
    ],
    "version": "0.2.0"
}
