{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Vite Dev Server",
            "type": "npm",
            "script": "dev",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "typescript",
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\s*Local:\\s+",
                    "endsPattern": "ready in \\d+ms"
                }
            }
        },
        {
            "label": "Install Dependencies",
            "type": "npm",
            "script": "install",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Build Application",
            "type": "npm",
            "script": "build",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
