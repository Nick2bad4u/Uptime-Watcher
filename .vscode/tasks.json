        {
            "detail": "Lints all source files using ESLint.",
            "group": "test",
            "icon": {
                "color": "terminal.ansiYellow",
                "id": "search"
            },
            "label": "Lint",
            "presentation": {
                "clear": true,
                "close": false,
                "echo": true,
                "focus": false,
                "group": "test",
                "panel": "shared",
                "preserveTerminalName": false,
                "reveal": "silent",
                "revealProblems": "onProblem",
                "showReuseMessage": true
            },
            "problemMatcher": {
                "applyTo": "allDocuments",
                "owner": "eslint",
                "pattern": [
                    {
                        "file": 1,
                        "regexp": "^([^\\s].*?)$"
                    },
                    {
                        "code": 5,
                        "column": 2,
                        "line": 1,
                        "loop": true,
                        "message": 4,
                        "regexp": "^\\s+(\\d+):(\\d+)\\s+(error|warning|info)\\s+(.+?)\\s{2,}(.*)$",
                        "severity": 3
                    }
                ]
            },
            "runOptions": {
                "instanceLimit": 1,
                "instancePolicy": "terminateOldest"
            },
            "script": "lint:fix",
            "type": "npm"
        },
