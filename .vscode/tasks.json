        {
            "detail": "Runs all linters: TypeScript type-checking, ESLint, Stylelint, Madge, and Knip.",
            "group": "test",
            "icon": {
                "color": "terminal.ansiYellow",
                "id": "checklist"
            },
            "label": "Lint:All:Fix",
            "presentation": {
                "clear": true,
                "close": false,
                "echo": true,
                "focus": false,
                "group": "test",
                "panel": "shared",
                "preserveTerminalName": false,
                "reveal": "silent",
                "revealProblems": "onProblem",
                "showReuseMessage": true
            },
            "problemMatcher": [
                {
                    "owner": "typescript",
                    "pattern": {
                        "code": 5,
                        "column": 3,
                        "file": 1,
                        "line": 2,
                        "message": 6,
                        "regexp": "^(?:\\x1b\\[[0-9;]*m)*(.+?)\\((\\d+),(\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+):\\s*(.*)$",
                        "severity": 4
                    },
                    "severity": "error"
                },
                {
                    "owner": "eslint",
                    "pattern": [
                        {
                            "file": 1,
                            "regexp": "^([^\\s].*?)$"
                        },
                        {
                            "code": 5,
                            "column": 2,
                            "line": 1,
                            "loop": true,
                            "message": 4,
                            "regexp": "^\\s+(\\d+):(\\d+)\\s+(error|warning|info)\\s+(.+?)\\s{2,}(.*)$",
                            "severity": 3
                        }
                    ]
                },
                {
                    "owner": "stylelint",
                    "pattern": {
                        "code": 5,
                        "column": 3,
                        "file": 1,
                        "line": 2,
                        "message": 4,
                        "regexp": "^(?:\\x1b\\[[0-9;]*m)*\\s*(.+?):(\\d+):(\\d+)\\s*(?:\\x1b\\[[0-9;]*m)*[✖×](?:\\x1b\\[[0-9;]*m)*\\s+(.+?)\\s{2,}(.*)$"
                    },
                    "severity": "error"
                },
                {
                    "owner": "remark",
                    "pattern": {
                        "code": 7,
                        "column": 3,
                        "endColumn": 4,
                        "file": 1,
                        "line": 2,
                        "message": 6,
                        "regexp": "^(?:\\x1b\\[[0-9;]*m)*\\s*(.+?):(\\d+):(\\d+)(?:-(\\d+))?\\s+(warning|error)\\s+(.+?)\\s{2,}(.*)$",
                        "severity": 5
                    },
                    "severity": "warning"
                },
                {
                    "owner": "knip",
                    "pattern": {
                        "column": 3,
                        "file": 1,
                        "line": 2,
                        "message": 4,
                        "regexp": "^(?:\\x1b\\[[0-9;]*m)*(.+?):(\\d+):(\\d+)\\s+(.*)$"
                    },
                    "severity": "warning"
                },
                {
                    "owner": "madge",
                    "pattern": {
                        "message": 1,
                        "regexp": "^(?:\\x1b\\[[0-9;]*m)*\\s*(.+?)\\s*$"
                    },
                    "severity": "error"
                }
            ],
            "runOptions": {
                "instanceLimit": 1,
                "instancePolicy": "terminateOldest"
            },
            "script": "lint:all:fix",
            "type": "npm"
        }
    ],
    "version": "2.0.0"
