{
    "tasks": [
        {
            "detail": "Starts the Vite development server for the application.",
            "group": "build",
            "icon": {
                "color": "terminal.ansiGreen",
                "id": "debug-start"
            },
            "isBackground": true,
            "label": "Start Vite Dev Server",
            "presentation": {
                "clear": false,
                "close": false,
                "echo": true,
                "focus": false,
                "group": "build",
                "panel": "shared",
                "reveal": "always",
                "revealProblems": "onProblem",
                "showReuseMessage": true
            },
            "problemMatcher": {
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*VITE v.*",
                    "endsPattern": ".*ready in.*"
                },
                "owner": "vite",
                "pattern": {
                    "column": 3,
                    "file": 1,
                    "line": 2,
                    "message": 5,
                    "regexp": "^(?:\\u001b\\[[0-9;]*m)*(?:File:\\s+)?((?:[A-Za-z]:)?[^:\\r\\n]+):(\\d+):(\\d+):\\s*(?:(error|warning)(?::|\\s+-)?\\s*)?(.*)$",
                    "severity": 4
                },
                "severity": "error"
            },
            "promptOnClose": false,
            "runOptions": {
                "instanceLimit": 1,
                "instancePolicy": "terminateOldest"
            },
            "script": "dev",
            "type": "npm"
        },
