{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleDetection": "auto",
        "moduleResolution": "bundler",
        "outDir": "dist",
        "target": "ESNext",
        "tsBuildInfoFile": "./dist/typedoc.tsbuildinfo",
        "lib": [
            "DOM.Iterable",
            "DOM",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
            "ES2021",
            "ES2022",
            "ES2023",
            "ES6",
            "ES7",
            "ESNext"
        ],
        "paths": {
            "@shared/*": [
                "../../shared/*"
            ],
            "@electron/*": [
                "../../electron/*"
            ],
            "@app/*": [
                "../../src/*"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "sourceMap": true,
        "noEmit": false,
        "allowJs": true,
        "checkJs": false
    },
    "include": [
        "../../src/**/*.ts",
        "../../src/**/*.tsx",
        "../../src/**/*.js",
        "../../src/**/*.jsx",
        "../../electron/**/*.ts",
        "../../electron/**/*.tsx",
        "../../electron/**/*.js",
        "../../electron/**/*.jsx",
        "../../shared/**/*.ts",
        "../../shared/**/*.tsx",
        "../../shared/**/*.js",
        "../../shared/**/*.jsx"
    ],
    "exclude": [
        "../../node_modules/**",
        "../../dist/**",
        "**/dist/**",
        "../../dist-electron/**",
        "../../electron/**/dist/**",
        "../../dist-shared/**",
        "../../dist-shared-test/**",
        "../../coverage/**",
        "../../build/**",
        "../../out/**",
        "../../tmp/**",
        "../../src/test/**",
        "../../src/**/test/**",
        "../../src/**/*.test.*",
        "../../src/**/*.spec.*",
        "../../electron/test/**",
        "../../electron/**/test/**",
        "../../electron/**/*.test.*",
        "../../electron/**/*.spec.*",
        "../../shared/test/**",
        "../../shared/**/test/**",
        "../../shared/**/*.test.*",
        "../../shared/**/*.spec.*",
        "../../tests/**",
        "../../spec/**",
        "../../specs/**",
        "../../**/mock*",
        "../../**/test-*",
        "../../**/setupTests*",
        "../../**/*.d.ts",
        "../../**/vitest.*",
        "../../**/vite.config.*",
        "../../**/tsconfig.*",
        "../../**/.vite/**",
        "../../**/.turbo/**",
        "../../**/.docusaurus/**",
        "node_modules",
        "dist",
        "build",
        "coverage",
        "../../electron/dist/**",
        "../../src/services/dist/**",
        "../../src/theme/dist/**",
    ]
}