{
    "$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",

    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true,
        "defaultBranch": "main"
    },

    "files": {
        "ignoreUnknown": false,
        "maxSize": 2097152,
        "includes": [
            "src/**/*",
            "electron/**/*",
            "shared/**/*",
            "scripts/**/*",
            "*.{js,ts,jsx,tsx,json,jsonc,css,html,md}"
        ],
        "experimentalScannerIgnores": [
            "node_modules",
            "dist",
            "dist-electron",
            "coverage",
            "release",
            ".git",
            ".cache",
            "html"
        ]
    },

    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 120,
        "attributePosition": "auto",
        "bracketSpacing": true,
        "useEditorconfig": true,
        "expand": "auto",
        "includes": [
            "src/**/*",
            "electron/**/*",
            "shared/**/*",
            "scripts/**/*"
        ]
    },

    "linter": {
        "enabled": true,
        "includes": [
            "src/**/*",
            "electron/**/*",
            "shared/**/*",
            "scripts/**/*"
        ],
        "rules": {
            "recommended": true,

            "correctness": {
                "noUnusedVariables": "error",
                "noUnusedImports": "error",
                "useExhaustiveDependencies": "warn",
                "noUndeclaredVariables": "error",
                "noUnreachable": "error",
                "noSelfAssign": "error",
                "useValidForDirection": "error",
                "noVoidTypeReturn": "error"
            },

            "suspicious": {
                "noExplicitAny": "warn",
                "noArrayIndexKey": "warn",
                "noEmptyBlockStatements": "error",
                "noConfusingVoidType": "warn",
                "noDebugger": "error",
                "noDuplicateCase": "error",
                "noFallthroughSwitchClause": "error",
                "noMisleadingCharacterClass": "error",
                "noRedundantUseStrict": "error",
                "noSelfCompare": "error",
                "noSparseArray": "error"
            },

            "style": {
                "useConst": "error",
                "useTemplate": "error",
                "useExponentiationOperator": "error",
                "useEnumInitializers": "warn",
                "useImportType": "error",
                "useNodejsImportProtocol": "warn",
                "useNumberNamespace": "error",
                "useSingleVarDeclarator": "warn"
            },

            "complexity": {
                "useFlatMap": "error",
                "noForEach": "warn",
                "useOptionalChain": "warn",
                "useSimpleNumberKeys": "warn",
                "useLiteralKeys": "warn"
            },

            "performance": {
                "noDelete": "error",
                "noAccumulatingSpread": "warn",
                "noBarrelFile": "warn",
                "noReExportAll": "warn"
            },

            "security": {
                "noDangerouslySetInnerHtml": "error",
                "noGlobalEval": "error"
            },

            "a11y": {
                "useValidAnchor": "error",
                "useAltText": "error",
                "useButtonType": "error",
                "useKeyWithClickEvents": "warn",
                "useValidAriaProps": "error",
                "useValidAriaRole": "error",
                "useValidAriaValues": "error",
                "noAccessKey": "warn",
                "noAriaUnsupportedElements": "error",
                "noRedundantAlt": "warn",
                "useFocusableInteractive": "warn",
                "useIframeTitle": "error"
            },

            "nursery": {
                "recommended": false,
                "useSortedClasses": "warn"
            }
        }
    },

    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "recommended": true
            }
        }
    },

    "javascript": {
        "parser": {
            "unsafeParameterDecoratorsEnabled": false,
            "jsxEverywhere": true
        },
        "formatter": {
            "jsxQuoteStyle": "double",
            "quoteProperties": "asNeeded",
            "trailingCommas": "es5",
            "semicolons": "always",
            "arrowParentheses": "always",
            "bracketSameLine": false,
            "quoteStyle": "double",
            "attributePosition": "auto",
            "bracketSpacing": true
        },
        "globals": [
            "window",
            "document",
            "electronAPI",
            "__dirname",
            "__filename",
            "process",
            "Buffer",
            "global",
            "NodeJS"
        ],
        "jsxRuntime": "transparent",
        "linter": {
            "enabled": true
        },
        "assist": {
            "enabled": true
        }
    },

    "json": {
        "parser": {
            "allowComments": true,
            "allowTrailingCommas": true
        },
        "formatter": {
            "enabled": true,
            "indentStyle": "space",
            "indentWidth": 4,
            "lineWidth": 120,
            "trailingCommas": "none",
            "expand": "always"
        },
        "linter": {
            "enabled": true
        },
        "assist": {
            "enabled": true
        }
    },

    "css": {
        "parser": {
            "cssModules": false
        },
        "formatter": {
            "enabled": true,
            "indentStyle": "space",
            "indentWidth": 4,
            "lineWidth": 120,
            "quoteStyle": "double"
        },
        "linter": {
            "enabled": true
        },
        "assist": {
            "enabled": true
        }
    },

    "html": {
        "formatter": {
            "enabled": false,
            "indentStyle": "space",
            "indentWidth": 4,
            "lineWidth": 120,
            "attributePosition": "auto",
            "bracketSameLine": false,
            "indentScriptAndStyle": true,
            "selfCloseVoidElements": "never"
        }
    },

    "graphql": {
        "formatter": {
            "enabled": false,
            "indentStyle": "space",
            "indentWidth": 4,
            "lineWidth": 120,
            "quoteStyle": "double"
        },
        "linter": {
            "enabled": true
        },
        "assist": {
            "enabled": true
        }
    },

    "overrides": [
        {
            "includes": ["*.md", "*.mdx"],
            "formatter": {
                "lineWidth": 100,
                "indentWidth": 2
            }
        },
        {
            "includes": [
                "**/*.test.{js,ts,jsx,tsx}",
                "**/*.spec.{js,ts,jsx,tsx}"
            ],
            "linter": {
                "rules": {
                    "suspicious": {
                        "noExplicitAny": "off"
                    },
                    "correctness": {
                        "noUnusedVariables": "warn"
                    },
                    "complexity": {
                        "noForEach": "off"
                    }
                }
            }
        },
        {
            "includes": [
                "**/package.json",
                "**/package-lock.json",
                "**/pnpm-lock.yaml"
            ],
            "formatter": {
                "enabled": false
            }
        },
        {
            "includes": [
                "**/node_modules/**",
                "**/dist/**",
                "**/dist-electron/**"
            ],
            "formatter": {
                "enabled": false
            },
            "linter": {
                "enabled": false
            }
        },
        {
            "includes": ["electron/**/*.ts"],
            "javascript": {
                "globals": [
                    "app",
                    "BrowserWindow",
                    "ipcMain",
                    "Menu",
                    "Tray",
                    "shell",
                    "clipboard",
                    "nativeTheme",
                    "powerMonitor",
                    "screen",
                    "systemPreferences"
                ]
            }
        },
        {
            "includes": ["src/**/*.{ts,tsx}"],
            "javascript": {
                "globals": [
                    "React",
                    "JSX"
                ]
            }
        },
        {
            "includes": [".vscode/**/*.json", "**/.vscode/**/*.json"],
            "json": {
                "parser": {
                    "allowComments": true,
                    "allowTrailingCommas": true
                }
            }
        }
    ]
}
