{
    "$schema": "https://repomix.com/schemas/latest/schema.json",

    "ignore": {
        "useGitignore": true,
        "useDefaultPatterns": true,
        "customPatterns": [
            "**/node_modules/**",
            "**/dist/**",
            "**/dist-electron/**",
            "**/build/**",
            "**/coverage/**",
            "**/release/**",
            "**/report/**",
            "**/.git/**",
            "**/.vscode/**",
            "**/.idea/**",
            "**/.nyc_output/**",
            "**/tmp/**",
            "**/temp/**",
            "**/*.log",
            "**/*.cache",
            "**/*.tmp",
            "**/*.temp",
            "**/npm-debug.log*",
            "**/yarn-debug.log*",
            "**/yarn-error.log*",
            "**/lerna-debug.log*",
            "**/.DS_Store",
            "**/Thumbs.db",
            "**/*.tsbuildinfo",
            "**/tsconfig.tsbuildinfo",
            "**/.stylelintcache",
            "**/.eslintcache",
            "**/repomix-output.*",
            "**/generated-sources.json",
            "**/flatpak-build/**",
            "**/*.wasm",
            "**/*.node",
            "**/*.so",
            "**/*.dll",
            "**/*.dylib",
            "**/*.exe",
            "**/*.bin",
            "**/*.img",
            "**/*.iso",
            "**/*.dmg",
            "**/*.pkg",
            "**/*.deb",
            "**/*.rpm",
            "**/*.tar.gz",
            "**/*.zip",
            "**/*.rar",
            "**/*.7z",
            "**/*.png",
            "**/*.jpg",
            "**/*.jpeg",
            "**/*.gif",
            "**/*.bmp",
            "**/*.tiff",
            "**/*.webp",
            "**/*.svg",
            "**/*.ico",
            "**/*.icns",
            "**/*.pdf",
            "**/*.doc",
            "**/*.docx",
            "**/*.xls",
            "**/*.xlsx",
            "**/*.ppt",
            "**/*.pptx",
            "**/*.mp3",
            "**/*.mp4",
            "**/*.wav",
            "**/*.avi",
            "**/*.mov",
            "**/*.mkv",
            "**/*.webm",
            "**/*.flv",
            "**/*.wmv",
            "**/assets/node-sqlite3-wasm.wasm",
            "**/icons/**",
            "**/html/**",
            "**/benchmarks/**",
            "**/test/**",
            "**/tests/**",
            "**/*.test.*",
            "**/*.spec.*",
            "**/__tests__/**",
            "**/__mocks__/**",
            "**/jest.config.*",
            "**/vitest.config.*",
            "**/cypress/**",
            "**/e2e/**",
            "**/.github/**",
            "**/scripts/**",
            "**/tools/**",
            "**/utilities/**",
            "**/bin/**",
            "**/vendor/**",
            "**/third_party/**",
            "**/external/**",
            "**/libs/**",
            "**/libraries/**",
            "**/packages/*/node_modules/**",
            "**/packages/*/dist/**",
            "**/lerna.json",
            "**/rush.json",
            "**/pnpm-workspace.yaml",
            "**/workspace.json",
            "**/nx.json",
            "**/.env",
            "**/.env.*",
            "**/secrets/**",
            "**/private/**",
            "**/confidential/**",
            "**/.secrets/**",
            "**/.private/**",
            "**/keys/**",
            "**/certificates/**",
            "**/*.key",
            "**/*.pem",
            "**/*.p12",
            "**/*.pfx",
            "**/*.crt",
            "**/*.cert",
            "**/.ssh/**",
            "**/.gnupg/**",
            "**/backup/**",
            "**/backups/**",
            "**/*.backup",
            "**/*.bak",
            "**/*.swp",
            "**/*.swo",
            "**/*~",
            "**/config/local.*",
            "**/config/production.*",
            "**/config/staging.*",
            "**/config/development.*",
            "**/docker-compose.override.*",
            "**/Dockerfile.local",
            "**/Dockerfile.dev",
            "**/Dockerfile.prod",
            "**/.dockerignore",
            "**/vagrant/**",
            "**/Vagrantfile",
            "**/.vagrant/**"
        ]
    },

    "include": [
        "src/**/*",
        "electron/**/*",
        "shared/**/*",
        "*.{js,ts,json,md,yml,yaml}",
        "package*.json",
        "tsconfig*.json",
        "vite.config.ts",
        "vitest*.config.ts",
        "commitlint.config.mjs",
        "eslint.config.mjs",
        "postcss.config.mjs",
        "tailwind.config.mjs",
        "electron/*.ts",
        "electron/**/*.ts",
        "src/*.{ts,tsx,css}",
        "src/**/*.{ts,tsx,css}",
        "docs/**/*.md"
    ],

    "input": {
        "maxFileSize": 52428800
    },

    "output": {
        "filePath": "repomix-output.xml",
        "style": "xml",
        "parsableStyle": false,
        "compress": true,
        "headerText": "Uptime Watcher - Electron Desktop Application for Website Monitoring",
        "fileSummary": true,
        "directoryStructure": true,
        "files": true,
        "removeComments": false,
        "removeEmptyLines": true,
        "topFilesLength": 10,
        "showLineNumbers": false,
        "copyToClipboard": false,
        "includeEmptyDirectories": false,
        "git": {
            "sortByChanges": true,
            "sortByChangesMaxCommits": 200,
            "includeDiffs": false
        }
    },

    "security": {
        "enableSecurityCheck": true
    },

    "tokenCount": {
        "encoding": "o200k_base"
    }
}
