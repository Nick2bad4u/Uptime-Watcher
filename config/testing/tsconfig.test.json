{
    "$schema": "https://www.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "baseUrl": "../..",
        "composite": true,
        "incremental": true,
        "paths": {
            "@app/*": [
                "src/*"
            ],
            "@electron/*": [
                "electron/*"
            ],
            "@shared/*": [
                "shared/*"
            ]
        },
        "rootDir": "../..",
        "tsBuildInfoFile": "../../dist-electron/tsconfig.test.tsbuildinfo"
    },
    "exclude": [
        "../../electron/**/*.test.ts",
        "../../electron/**/*.test.tsx"
    ],
    "extends": "../../tsconfig.json",
    "include": [
        "../../*.config.js",
        "../../*.config.mjs",
        "../../*.config.ts",
        "../../**/*.config.js",
        "../../**/*.config.mjs",
        "../../**/*.config.ts",
        "../../eslint.config.mjs",
        "../../postcss.config.js",
        "../../src/**/*.spec.ts",
        "../../src/**/*.spec.mts",
        "../../src/**/*.spec.cts",
        "../../src/**/*.test.ts",
        "../../src/**/*.test.mts",
        "../../src/**/*.test.cts",
        "../../src/**/*.ts",
        "../../src/**/*.mts",
        "../../src/**/*.cts",
        "../../src/**/*.tsx",
        "../../src/test/**/*.ts",
        "../../src/test/**/*.mts",
        "../../src/test/**/*.cts",
        "../../src/test/**/*.tsx",
        "../../src/**/*.test.tsx",
        "../../electron/**/*.ts",
        "../../electron/**/*.mts",
        "../../electron/**/*.cts",
        "../../shared/**/*.ts",
        "../../shared/**/*.mts",
        "../../shared/**/*.cts",
        "../../shared/**/*.tsx",
        "../../shared/test/**/*.ts",
        "../../shared/test/**/*.mts",
        "../../shared/test/**/*.cts",
        "../../shared/test/**/*.tsx",
        "../../tailwind.config.mjs",
        "vitest.config.ts",
        "vitest.shared.config.ts"
    ]
}
