{
    "$schema": "https://www.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationDir": ".cache/builds/test/shared/types",
        "incremental": true,
        "isolatedDeclarations": false,
        "noEmit": false,
        "outDir": "../../.cache/builds/test/shared",
        "rootDir": "../..",
        "tsBuildInfoFile": "../../.cache/tsconfig.shared.test.tsbuildinfo",
        "types": ["node", "vitest/globals"]
    },
    "exclude": ["../../node_modules", "../../electron/**/*", "../../src/**/*"],
    "extends": "../../tsconfig.shared.json",
    "include": [
        "../../shared/**/*.spec.ts",
        "../../shared/**/*.spec.mts",
        "../../shared/**/*.spec.cts",
        "../../shared/**/*.test.ts",
        "../../shared/**/*.test.mts",
        "../../shared/**/*.test.cts",
        "../../shared/**/*.ts",
        "../../shared/**/*.mts",
        "../../shared/**/*.cts",
        "../../shared/**/*.tsx",
        "../../shared/test/**/*",
        "../../tests/strictTests/shared/**/*.ts",
        "../../tests/strictTests/shared/**/*.mts",
        "../../tests/strictTests/shared/**/*.cts",
        "../../tests/strictTests/shared/**/*.tsx",
        "../../tests/strictTests/shared/**/*"
    ]
}
