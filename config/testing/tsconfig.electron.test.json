{
    "$schema": "https://www.schemastore.org/tsconfig.json",
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "../..",
        "rootDir": "../..",
        "outDir": "../../dist-electron",
        "tsBuildInfoFile": "../../dist-electron/tsconfig.electron.test.tsbuildinfo",
        "paths": {
            "@app/*": [
                "src/*"
            ],
            "@electron/*": [
                "electron/*"
            ],
            "@shared/*": [
                "shared/*"
            ]
        },
        "composite": true,
        "incremental": true,
        "isolatedDeclarations": false
    },
    "exclude": [
        "node_modules",
        "../../dist-electron"
    ],
    "include": [
        "../../electron/**/*.spec.ts",
        "../../electron/**/*.spec.mts",
        "../../electron/**/*.spec.cts",
        "../../electron/**/*.test.ts",
        "../../electron/**/*.test.mts",
        "../../electron/**/*.test.cts",
        "../../electron/**/*.ts",
        "../../electron/**/*.mts",
        "../../electron/**/*.cts",
        "../../electron/**/*.tsx",
        "../../electron/test/**/*"
    ],
    "references": [
        {
            "path": "../../tsconfig.shared.json"
        },
        {
            "path": "../../tsconfig.electron.json"
        }
    ]
}
