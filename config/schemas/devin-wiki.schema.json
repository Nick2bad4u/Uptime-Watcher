{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "pages": {
            "items": {
                "properties": {
                    "page_notes": {
                        "items": {
                            "properties": {
                                "author": {
                                    "type": "string"
                                },
                                "content": {
                                    "maxLength": 10000,
                                    "type": "string"
                                }
                            },
                            "required": [
                                "content"
                            ],
                            "type": "object"
                        },
                        "type": "array"
                    },
                    "parent": {
                        "type": "string"
                    },
                    "purpose": {
                        "type": "string"
                    },
                    "title": {
                        "minLength": 1,
                        "type": "string"
                    }
                },
                "required": [
                    "title",
                    "purpose"
                ],
                "type": "object"
            },
            "maxItems": 30,
            "type": "array"
        },
        "repo_notes": {
            "items": {
                "properties": {
                    "author": {
                        "type": "string"
                    },
                    "content": {
                        "maxLength": 10000,
                        "type": "string"
                    }
                },
                "required": [
                    "content"
                ],
                "type": "object"
            },
            "maxItems": 100,
            "type": "array"
        }
    },
    "required": [
        "repo_notes"
    ],
    "type": "object"
}
