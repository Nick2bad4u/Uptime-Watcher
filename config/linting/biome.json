{
    "$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
    "assist": {
        "actions": {
            "source": {
                "recommended": true
            }
        },
        "enabled": true
    },
    "css": {
        "assist": {
            "enabled": true
        },
        "formatter": {
            "enabled": true,
            "indentStyle": "space",
            "indentWidth": 4,
            "lineWidth": 120,
            "quoteStyle": "double"
        },
        "linter": {
            "enabled": true
        },
        "parser": {
            "cssModules": false
        }
    },
    "files": {
        "experimentalScannerIgnores": [
            "node_modules",
            "dist",
            "dist-electron",
            "coverage",
            "release",
            ".git",
            ".cache",
            "html"
        ],
        "ignoreUnknown": false,
        "includes": [
            "src/**/*",
            "electron/**/*",
            "shared/**/*",
            "scripts/**/*",
            "*.{js,mjs,cjs,ts,mts,cts,jsx,tsx,json,jsonc,css,html,md}"
        ],
        "maxSize": 2097152
    },
    "formatter": {
        "attributePosition": "auto",
        "bracketSpacing": true,
        "enabled": true,
        "expand": "auto",
        "formatWithErrors": false,
        "includes": [
            "src/**/*",
            "electron/**/*",
            "shared/**/*",
            "scripts/**/*"
        ],
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 120,
        "useEditorconfig": true
    },
    "graphql": {
        "assist": {
            "enabled": true
        },
        "formatter": {
            "enabled": false,
            "indentStyle": "space",
            "indentWidth": 4,
            "lineWidth": 120,
            "quoteStyle": "double"
        },
        "linter": {
            "enabled": true
        }
    },
    "html": {
        "formatter": {
            "attributePosition": "auto",
            "bracketSameLine": false,
            "enabled": false,
            "indentScriptAndStyle": true,
            "indentStyle": "space",
            "indentWidth": 4,
            "lineWidth": 120,
            "selfCloseVoidElements": "never"
        }
    },
    "javascript": {
        "assist": {
            "enabled": true
        },
        "formatter": {
            "arrowParentheses": "always",
            "attributePosition": "auto",
            "bracketSameLine": false,
            "bracketSpacing": true,
            "jsxQuoteStyle": "double",
            "quoteProperties": "asNeeded",
            "quoteStyle": "double",
            "semicolons": "always",
            "trailingCommas": "es5"
        },
        "globals": [
            "window",
            "document",
            "electronAPI",
            "__dirname",
            "__filename",
            "process",
            "Buffer",
            "global",
            "NodeJS"
        ],
        "jsxRuntime": "transparent",
        "linter": {
            "enabled": true
        },
        "parser": {
            "jsxEverywhere": true,
            "unsafeParameterDecoratorsEnabled": false
        }
    },
    "json": {
        "assist": {
            "enabled": true
        },
        "formatter": {
            "enabled": true,
            "expand": "always",
            "indentStyle": "space",
            "indentWidth": 4,
            "lineWidth": 120,
            "trailingCommas": "none"
        },
        "linter": {
            "enabled": true
        },
        "parser": {
            "allowComments": true,
            "allowTrailingCommas": true
        }
    },
    "linter": {
        "enabled": true,
        "includes": [
            "src/**/*",
            "electron/**/*",
            "shared/**/*",
            "scripts/**/*"
        ],
        "rules": {
            "a11y": {
                "noAccessKey": "warn",
                "noAriaUnsupportedElements": "error",
                "noRedundantAlt": "warn",
                "useAltText": "error",
                "useButtonType": "error",
                "useFocusableInteractive": "warn",
                "useIframeTitle": "error",
                "useKeyWithClickEvents": "warn",
                "useValidAnchor": "error",
                "useValidAriaProps": "error",
                "useValidAriaRole": "error",
                "useValidAriaValues": "error"
            },
            "complexity": {
                "noForEach": "warn",
                "useFlatMap": "error",
                "useLiteralKeys": "warn",
                "useOptionalChain": "warn",
                "useSimpleNumberKeys": "warn"
            },
            "correctness": {
                "noSelfAssign": "error",
                "noUndeclaredVariables": "error",
                "noUnreachable": "error",
                "noUnusedImports": "error",
                "noUnusedVariables": "error",
                "noVoidTypeReturn": "error",
                "useExhaustiveDependencies": "warn",
                "useValidForDirection": "error"
            },
            "nursery": {
                "recommended": false,
                "useSortedClasses": "warn"
            },
            "performance": {
                "noAccumulatingSpread": "warn",
                "noBarrelFile": "warn",
                "noDelete": "error",
                "noReExportAll": "warn"
            },
            "recommended": true,
            "security": {
                "noDangerouslySetInnerHtml": "error",
                "noGlobalEval": "error"
            },
            "style": {
                "useConst": "error",
                "useEnumInitializers": "warn",
                "useExponentiationOperator": "error",
                "useImportType": "error",
                "useNodejsImportProtocol": "warn",
                "useNumberNamespace": "error",
                "useSingleVarDeclarator": "warn",
                "useTemplate": "error"
            },
            "suspicious": {
                "noArrayIndexKey": "warn",
                "noConfusingVoidType": "warn",
                "noDebugger": "error",
                "noDuplicateCase": "error",
                "noEmptyBlockStatements": "error",
                "noExplicitAny": "warn",
                "noFallthroughSwitchClause": "error",
                "noMisleadingCharacterClass": "error",
                "noRedundantUseStrict": "error",
                "noSelfCompare": "error",
                "noSparseArray": "error"
            }
        }
    },
    "overrides": [
        {
            "formatter": {
                "indentWidth": 2,
                "lineWidth": 100
            },
            "includes": [
                "*.md",
                "*.mdx"
            ]
        },
        {
            "includes": [
                "**/*.test.{js,ts,jsx,tsx}",
                "**/*.spec.{js,ts,jsx,tsx}"
            ],
            "linter": {
                "rules": {
                    "complexity": {
                        "noForEach": "off"
                    },
                    "correctness": {
                        "noUnusedVariables": "warn"
                    },
                    "suspicious": {
                        "noExplicitAny": "off"
                    }
                }
            }
        },
        {
            "formatter": {
                "enabled": false
            },
            "includes": [
                "**/package.json",
                "**/package-lock.json",
                "**/pnpm-lock.yaml"
            ]
        },
        {
            "formatter": {
                "enabled": false
            },
            "includes": [
                "**/node_modules/**",
                "**/dist/**",
                "**/dist-electron/**"
            ],
            "linter": {
                "enabled": false
            }
        },
        {
            "includes": [
                "electron/**/*.ts"
            ],
            "javascript": {
                "globals": [
                    "app",
                    "BrowserWindow",
                    "ipcMain",
                    "Menu",
                    "Tray",
                    "shell",
                    "clipboard",
                    "nativeTheme",
                    "powerMonitor",
                    "screen",
                    "systemPreferences"
                ]
            }
        },
        {
            "includes": [
                "src/**/*.{ts,tsx}"
            ],
            "javascript": {
                "globals": [
                    "React",
                    "JSX"
                ]
            }
        },
        {
            "includes": [
                ".vscode/**/*.json",
                "**/.vscode/**/*.json"
            ],
            "json": {
                "parser": {
                    "allowComments": true,
                    "allowTrailingCommas": true
                }
            }
        }
    ],
    "vcs": {
        "clientKind": "git",
        "defaultBranch": "main",
        "enabled": true,
        "useIgnoreFile": true
    }
}
