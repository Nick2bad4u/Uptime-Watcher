{
    "$schema": "https://www.schemastore.org/jsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "checkJs": true,
        "composite": true,
        "erasableSyntaxOnly": false,
        "incremental": true,
        "isolatedDeclarations": false,
        "maxNodeModuleJsDepth": 0,
        "outDir": ".cache/builds/jsconfig",
        "paths": {
            "@app/*": [
                "src/*"
            ],
            "@assets/*": [
                "assets/*"
            ],
            "@electron/*": [
                "electron/*"
            ],
            "@shared/*": [
                "shared/*"
            ]
        },
        "resolveJsonModule": false,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "tsBuildInfoFile": "./.cache/tsconfig.jsconfig.tsbuildinfo"
    },
    "exclude": [
        "node_modules",
        "node_modules/**",
        "**/node_modules/**",
        "dist",
        "dist/**",
        "coverage",
        ".cache",
        "docs/docusaurus/build/**",
        "docs/docusaurus/.docusaurus/**",
        "docs/docusaurus/static/**",
        "docs/docusaurus/docs/**",
        "temp/**",
        "storybook-static/**"
    ],
    "extends": "./tsconfig.json",
    "include": [
        "**/*.d.ts",
        "*.d.ts",
        "**/*.js",
        "**/*.mjs",
        "**/*.cjs",
        "**/*.jsx",
        "*.js",
        "*.mjs",
        "*.cjs",
        "*.jsx"
    ]
}
