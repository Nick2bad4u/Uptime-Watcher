{
    "$schema": "https://www.schemastore.org/jsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "checkJs": true,
        "composite": true,
        "incremental": true,
        "isolatedDeclarations": false,
        "maxNodeModuleJsDepth": 0,
        "outDir": ".cache/builds/jsconfig",
        "paths": {
            "@app/*": [
                "src/*"
            ],
            "@assets/*": [
                "assets/*"
            ],
            "@electron/*": [
                "electron/*"
            ],
            "@shared/*": [
                "shared/*"
            ]
        },
        "resolveJsonModule": false,
        "tsBuildInfoFile": "./.cache/tsconfig.jsconfig.tsbuildinfo"
    },
    "extends": "./tsconfig.json",
    "include": [
        "**/*.js",
        "**/*.mjs",
        "**/*.cjs",
        "**/*.jsx",
        "*.js",
        "*.mjs",
        "*.cjs",
        "*.jsx"
    ]
}
