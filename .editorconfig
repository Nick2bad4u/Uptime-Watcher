# EditorConfig file for Uptime Watcher
# This file defines consistent coding styles across different editors and IDEs
# See: https://editorconfig.org/

# Top-most EditorConfig file
root=true

# === DEFAULT SETTINGS ===
# Apply to all files
[*]
charset=utf-8
end_of_line=lf
insert_final_newline=true
trim_trailing_whitespace=true
indent_style=tab
indent_size=4

# === SOURCE CODE ===
# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_style=tab
indent_size=4
max_line_length=100

# === JSON AND CONFIGURATION ===
# JSON files (use spaces for better readability)
[*.{json,jsonc}]
indent_style=space
indent_size=2

# Package files
[package*.json]
indent_style=space
indent_size=2

# TypeScript configuration
[tsconfig*.json]
indent_style=space
indent_size=2

# === YAML FILES ===
[*.{yml,yaml}]
indent_style=space
indent_size=2

# === MARKDOWN ===
[*.md]
indent_style=space
indent_size=2
trim_trailing_whitespace=false
max_line_length=100

# === STYLES ===
# CSS and related files
[*.{css,scss,sass,less}]
indent_style=tab
indent_size=2

# === HTML ===
[*.{html,htm}]
indent_style=space
indent_size=2

# === XML ===
[*.{xml,svg}]
indent_style=space
indent_size=2

# === SHELL SCRIPTS ===
[*.{sh,bash,zsh,fish}]
indent_style=space
indent_size=2

# === POWERSHELL ===
[*.{ps1,psm1,psd1}]
indent_style=space
indent_size=4

# === BATCH FILES ===
[*.{bat,cmd}]
indent_style=space
indent_size=2
end_of_line=crlf

# === CONFIGURATION FILES ===
# Various config files
[*.{toml,ini}]
indent_style=space
indent_size=2

# Prettier configuration
[.prettierrc*]
indent_style=space
indent_size=2

# ESLint configuration
[eslint.config.*]
indent_style=tab
indent_size=4

# === BUILD TOOLS ===
# Vite configuration
[vite.config.*]
indent_style=tab
indent_size=4

# Vitest configuration
[vitest*.config.*]
indent_style=tab
indent_size=4

# Playwright configuration
[playwright.config.*]
indent_style=tab
indent_size=4

# === IGNORE FILES ===
[.*ignore]
indent_style=space
indent_size=2

# === GITHUB FILES ===
[.github/**]
indent_style=space
indent_size=2

# === SPECIAL FILES ===
# Changelog
[CHANGELOG.md]
indent_style=space
indent_size=2

# License
[LICENSE*]
trim_trailing_whitespace=false

# Environment files
[.env*]
indent_style=space
indent_size=2
