{
    "extends": "./tsconfig.shared.json",
    "compilerOptions": {
        "outDir": "dist-shared-test",
        "tsBuildInfoFile": "./dist-shared-test/tsconfig.shared.test.tsbuildinfo",
        "composite": true,
        "incremental": true,
        "isolatedDeclarations": false
    },
    "exclude": [
        "node_modules",
        "electron/**/*",
        "src/**/*"
    ],
    "include": [
        "shared/**/*.spec.ts",
        "shared/**/*.test.ts",
        "shared/**/*.ts",
        "shared/**/*.tsx",
        "shared/test/**/*"
    ]
}
