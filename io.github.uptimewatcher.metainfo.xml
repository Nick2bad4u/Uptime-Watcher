<component type="desktop-application">
  <id>io.github.uptimewatcher</id>
  <metadata_license>MIT</metadata_license>
  <project_license>MIT</project_license>
  <name>Uptime Watcher</name>
  <summary>Monitor website uptime and performance</summary>
  <description>
    <p>
      Uptime Watcher is a desktop application for monitoring website uptime 
      and performance. Track multiple websites, get notifications when sites go down, 
      and view detailed analytics and response time charts.
    </p>
    <p>Features:</p>
    <ul>
      <li>Real-time website monitoring</li>
      <li>Multiple theme support (light, dark, high-contrast)</li>
      <li>Detailed analytics and charts</li>
      <li>Desktop notifications for downtime alerts</li>
      <li>Export/import monitoring data</li>
      <li>Customizable check intervals</li>
    </ul>
  </description>
  <launchable type="desktop-id">io.github.uptimewatcher.desktop</launchable>
  <screenshots>
    <screenshot type="default">
      <caption>Main application window showing site monitoring dashboard</caption>
    </screenshot>
  </screenshots>
  <url type="homepage">https://github.com/YourUsername/Uptime-Watcher</url>
