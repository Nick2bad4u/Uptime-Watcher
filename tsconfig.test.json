{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "paths": {
            "@/*": ["electron/*"],
            "@shared/*": ["shared/*"],
            "@app/*": ["src/*"]
        },
        "incremental": true,
        "tsBuildInfoFile": "./dist-electron/tsconfig.test.tsbuildinfo"
    },
    "include": [
        "*.config.js",
        "*.config.mjs",
        "*.config.ts",
        "**/*.config.js",
        "**/*.config.mjs",
        "**/*.config.ts",
        "eslint.config.mjs",
        "postcss.config.js",
        "shared/**/*.spec.ts",
        "shared/**/*.test.ts",
        "shared/**/*.ts",
        "shared/**/*.tsx",
        "shared/test/**/*.ts",
        "shared/test/**/*.tsx",
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/test/**/*.ts",
        "src/test/**/*.tsx",
        "tailwind.config.js",
        "vitest.config.ts",
        "src/test/**/*.ts",
        "src/test/**/*.tsx"
    ],
    "exclude": [
        "electron/**/*.test.ts",
        "electron/**/*.test.tsx"
    ]
}
