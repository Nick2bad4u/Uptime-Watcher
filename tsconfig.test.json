{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "outDir": "dist",
        "target": "ES2024",
        "lib": [
            "DOM.Iterable",
            "DOM",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
            "ES2021",
            "ES2022",
            "ES2023",
            "ES6",
            "ES7",
            "ESNext"
        ],
        "paths": {
            "@/*": ["src/*"],
            "@shared/*": ["shared/*"]
        },
        "types": [
            "@testing-library/jest-dom",
            "electron",
            "jest",
            "node",
            "react-dom",
            "react",
            "vite/client",
            "vitest/globals"
        ]
    },
    "exclude": ["node_modules"],
    "include": [
        "*.config.js",
        "*.config.mjs",
        "*.config.ts",
        "**/*.config.js",
        "**/*.config.mjs",
        "**/*.config.ts",
        "eslint.config.mjs",
        "postcss.config.js",
        "shared/**/*.spec.ts",
        "shared/**/*.test.ts",
        "shared/**/*.ts",
        "shared/**/*.tsx",
        "shared/test/**/*",
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/test/**/*",
        "tailwind.config.js",
        "vitest.config.ts"
    ]
}
