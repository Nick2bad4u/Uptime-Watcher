{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "outDir": "dist",
        "target": "ES2024",
        "lib": [
            "DOM.Iterable",
            "DOM",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
            "ES2021",
            "ES2022",
            "ES2023",
            "ES6",
            "ES7",
            "ESNext"
        ],
        "paths": {
            "@/*": ["src/*"],
            "@shared/*": ["shared/*"]
        },
        "types": ["node", "vitest/globals", "@testing-library/jest-dom", "jest", "electron"]
    },
    "exclude": ["node_modules"],
    "include": [
        "shared/**/*.spec.ts",
        "shared/**/*.test.ts",
        "shared/**/*.ts",
        "shared/**/*.tsx",
        "shared/test/**/*",
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/test/**/*",
        "vitest.config.ts"
    ]
}
