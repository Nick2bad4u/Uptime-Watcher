{
    "extends": "./tsconfig.json",
    "include": [
        "*.config.js",
        "*.config.mjs",
        "*.config.ts",
        "**/*.config.js",
        "**/*.config.mjs",
        "**/*.config.ts",
        "eslint.config.mjs",
        "postcss.config.js",
        "shared/**/*.spec.ts",
        "shared/**/*.test.ts",
        "shared/**/*.ts",
        "shared/**/*.tsx",
        "shared/test/**/*",
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/test/**/*",
        "tailwind.config.js",
        "vitest.config.ts"
    ]
}
