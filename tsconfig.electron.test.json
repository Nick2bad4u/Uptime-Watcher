{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "dist-electron",
        "module": "ESNext",
        "target": "ES2024",
        "lib": ["ES2022", "ES2024", "DOM", "DOM.Iterable", "ESNext"],
        "moduleResolution": "bundler",
        "baseUrl": ".",
        "paths": {
            "@/*": ["electron/*"],
            "@electron/*": ["electron/*"]
        },
        "types": ["node", "vitest/globals", "@testing-library/jest-dom", "jest", "electron"]
    },
    "include": [
        "electron/**/*.ts",
        "electron/**/*.tsx",
        "electron/**/*.test.ts",
        "electron/**/*.spec.ts",
        "electron/test/**/*",
        "vitest.electron.config.ts"
    ],
    "exclude": ["node_modules"]
}
