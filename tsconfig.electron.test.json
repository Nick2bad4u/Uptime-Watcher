{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "dist-electron",
        "tsBuildInfoFile": "./dist-electron/tsconfig.electron.test.tsbuildinfo",
        "paths": {
            "@app/*": [
                "src/*"
            ],
            "@electron/*": [
                "electron/*"
            ],
            "@shared/*": [
                "shared/*"
            ]
        },
        "composite": true,
        "incremental": true,
        "isolatedDeclarations": false
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "*.config.js",
        "*.config.mjs",
        "*.config.ts",
        "**.config.ts",
        "**/*.config.js",
        "**/*.config.mjs",
        "**/*.config.ts",
        "electron/**/*.spec.ts",
        "electron/**/*.test.ts",
        "electron/**/*.ts",
        "electron/**/*.tsx",
        "electron/test/**/*",
        "eslint.config.mjs",
        "postcss.config.js",
        "tailwind.config.mjs",
        "vitest.config.ts",
        "vitest.electron.config.ts"
    ],
    "references": [
        {
            "path": "./tsconfig.shared.json"
        },
        {
            "path": "./tsconfig.electron.json"
        }
    ]
}
