{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "outDir": "dist-electron",
        "target": "ES2024",
        "lib": [
            "DOM.Iterable",
            "DOM",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
            "ES2021",
            "ES2022",
            "ES2023",
            "ES6",
            "ES7",
            "ESNext"
        ],
        "paths": {
            "@/*": ["electron/*"],
            "@shared/*": ["shared/*"]
        },
        "types": ["node", "vitest/globals", "@testing-library/jest-dom", "jest", "electron"]
    },
    "exclude": ["node_modules"],
    "include": [
        "electron/**/*.spec.ts",
        "electron/**/*.test.ts",
        "electron/**/*.ts",
        "electron/**/*.tsx",
        "electron/test/**/*",
        "shared/**/*.spec.ts",
        "shared/**/*.test.ts",
        "shared/**/*.ts",
        "shared/**/*.tsx",
        "shared/test/**/*",
        "vitest.electron.config.ts",
        "**/*.config.ts",
        "**/*.config.js",
        "**/*.config.mjs",
        "*.config.ts",
        "*.config.js",
        "*.config.mjs",
        "eslint.config.mjs",
        "postcss.config.js",
        "tailwind.config.js",
    ]
}
