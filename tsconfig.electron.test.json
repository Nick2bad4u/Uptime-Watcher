{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "dist-electron",
        "paths": {
            "@/*": ["electron/*"],
            "@shared/*": ["shared/*"],
            "@app/*": ["src/*"]
        },
        "incremental": true,
        "tsBuildInfoFile": "./dist-electron/tsconfig.electron.test.tsbuildinfo"
    },
    "exclude": ["node_modules"],
    "include": [
        "*.config.js",
        "*.config.mjs",
        "*.config.ts",
        "**/*.config.js",
        "**/*.config.mjs",
        "**/*.config.ts",
        "electron/**/*.spec.ts",
        "electron/**/*.test.ts",
        "electron/**/*.ts",
        "electron/**/*.tsx",
        "electron/test/**/*",
        "eslint.config.mjs",
        "postcss.config.js",
        "shared/**/*.spec.ts",
        "shared/**/*.test.ts",
        "shared/**/*.ts",
        "shared/**/*.tsx",
        "shared/test/**/*",
        "tailwind.config.js",
        "vitest.electron.config.ts"
    ]
}
