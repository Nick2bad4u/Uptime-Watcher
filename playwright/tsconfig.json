{
    "$schema": "https://www.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "isolatedDeclarations": false,
        "baseUrl": ".",
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "lib": [
            "DOM.Iterable",
            "DOM",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
            "ES2021",
            "ES2022",
            "ES2023",
            "ES6",
            "ES7",
            "ESNext"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "paths": {
            "@/*": [
                "../src/*"
            ],
            "@/electron/*": [
                "../electron/*"
            ],
            "@/playwright/*": [
                "../playwright/*"
            ],
            "@/shared/*": [
                "../shared/*"
            ]
        },
        "resolveJsonModule": true,
        "skipLibCheck": false,
        "strict": true,
        "target": "ES2024",
        "types": [
            "@playwright/test",
            "node"
        ]
    },
    "exclude": [
        "coverage",
        "node_modules",
        "test-results",
        "../dist*/**",
        "../coverage/**",
        "../node_modules/**"
    ],
    "extends": "../tsconfig.json",
    "include": [
        "**/*.js",
        "**/*.mjs",
        "**/*.ts",
        "fixtures/**/*.js",
        "fixtures/**/*.mjs",
        "fixtures/**/*.ts"
    ]
}
