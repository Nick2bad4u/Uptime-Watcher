{
    "$schema": "https://www.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedDeclarations": false,
        "isolatedModules": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "outDir": "../.cache/builds/dist-playwright",
        "paths": {
            "@/*": [
                "../src/*"
            ],
            "@/electron/*": [
                "../electron/*"
            ],
            "@/playwright/*": [
                "../playwright/*"
            ],
            "@/shared/*": [
                "../shared/*"
            ]
        },
        "pretty": true,
        "resolveJsonModule": true,
        "skipLibCheck": false,
        "strict": true,
        "target": "ES2024",
        "tsBuildInfoFile": "../.cache/builds/dist-playwright/tsconfig.playwright.tsbuildinfo",
        "types": [
            "@playwright/test",
            "node"
        ]
    },
    "exclude": [
        "coverage",
        "node_modules",
        "test-results",
        "reports/**",
        "../.cache/builds/dist-playwright",
        "../coverage/**",
        "../node_modules/**",
        "codegen-template.mjs"
    ],
    "extends": "../tsconfig.json",
    "include": [
        "**/*.js",
        "**/*.mjs",
        "**/*.ts",
        "fixtures/**/*.js",
        "fixtures/**/*.mjs",
        "fixtures/**/*.ts"
    ]
}
