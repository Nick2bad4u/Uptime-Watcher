{
    "$schema": "https://www.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "incremental": true,
        "outDir": ".cache/builds/app",
        "paths": {
            "@app/*": ["src/*"],
            "@assets/*": ["assets/*"],
            "@electron/*": ["electron/*"],
            "@shared/*": ["shared/*"]
        },
        "tsBuildInfoFile": "./.cache/tsconfig.electron.tsbuildinfo"
    },
    "exclude": [
        "electron/**/*.spec.ts",
        "electron/**/*.test.ts",
        "electron/test/**/*",
        "node_modules",
        "shared/**/*.spec.ts",
        "shared/**/*.test.ts",
        "shared/test/**/*",
        "**/scripts/**"
    ],
    "extends": "./tsconfig.json",
    "include": ["electron/**/*", "vite/client", "vitest.electron.config.ts"],
    "references": [
        {
            "path": "./tsconfig.shared.json"
        }
    ]
}
