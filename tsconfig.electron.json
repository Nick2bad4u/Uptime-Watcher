{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "dist-electron",
        "paths": {
            "@/*": ["electron/*"],
            "@shared/*": ["shared/*"],
            "@app/*": ["src/*"]
        },
        "incremental": true,
        "tsBuildInfoFile": "./dist-electron/tsconfig.electron.tsbuildinfo"
    },
    "exclude": [
        "electron/**/*.spec.ts",
        "electron/**/*.test.ts",
        "electron/test/**/*",
        "node_modules",
        "shared/**/*.spec.ts",
        "shared/**/*.test.ts"
    ],
    "include": [
        "electron/**/*.css",
        "electron/**/*.ts",
        "electron/**/*.tsx",
        "shared/**/*.css",
        "shared/**/*.ts",
        "shared/**/*.tsx",
        "vite/client",
        "vitest.electron.config.ts"
    ]
}
