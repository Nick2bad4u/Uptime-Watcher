{
    "$schema": "https://www.schemastore.org/tsconfig.json",
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "dist-electron",
        "tsBuildInfoFile": "./dist-electron/tsconfig.electron.tsbuildinfo",
        "paths": {
            "@app/*": [
                "src/*"
            ],
            "@electron/*": [
                "electron/*"
            ],
            "@shared/*": [
                "shared/*"
            ]
        },
        "composite": true,
        "incremental": true
    },
    "exclude": [
        "electron/**/*.spec.ts",
        "electron/**/*.test.ts",
        "electron/test/**/*",
        "node_modules",
        "shared/**/*.spec.ts",
        "shared/**/*.test.ts",
        "shared/test/**/*",
        "**/scripts/**"
    ],
    "include": [
        "electron/**/*.css",
        "electron/**/*.ts",
        "electron/**/*.mts",
        "electron/**/*.cts",
        "electron/**/*.tsx",
        "vite/client",
        "vitest.electron.config.ts"
    ],
    "references": [
        {
            "path": "./tsconfig.shared.json"
        }
    ]
}
