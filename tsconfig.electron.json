{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "dist-electron",
        "module": "ESNext",
        "target": "ES2024",
        "lib": ["ES7", "ES6", "DOM", "DOM.Iterable", "ESNext", "ES2023", "ES2022", "ES2021", "ES2020", "ES2019", "ES2018", "ES2017"],
        "moduleResolution": "bundler",
        "baseUrl": ".",
        "declarationMap": false,
        "paths": {
            "@/*": ["electron/*"],
            "@shared/*": ["shared/*"]
        }
    },
    "include": [
        "electron/**/*.ts",
        "electron/**/*.tsx",
        "shared/**/*.ts",
        "shared/**/*.tsx",
        "shared/**/*.css",
        "electron/**/*.css",
        "vitest.electron.config.ts",
        "vite/client"
    ],
    "exclude": ["electron/**/*.test.ts", "electron/**/*.spec.ts", "electron/test/**/*", "node_modules"]
}
