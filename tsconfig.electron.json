{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "outDir": "dist-electron",
        "tsBuildInfoFile": "./dist-electron/tsconfig.electron.tsbuildinfo",
        "paths": {
            "@shared/*": [
                "shared/*"
            ]
        },
        "incremental": true
    },
    "exclude": [
        "electron/**/*.spec.ts",
        "electron/**/*.test.ts",
        "electron/test/**/*",
        "node_modules",
        "shared/**/*.spec.ts",
        "shared/**/*.test.ts",
        "**/scripts/**"
    ],
    "include": [
        "electron/**/*.css",
        "electron/**/*.ts",
        "electron/**/*.tsx",
        "shared/**/*.css",
        "shared/**/*.ts",
        "shared/**/*.tsx",
        "vite/client",
        "vitest.electron.config.ts"
    ]
}
