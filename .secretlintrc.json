{
    "ignore": [
        "**/*-Hashes.json",
        "**/Hashes.json",
        "**/*-hashes.json",
        "**/hashes.json",
        "**/*.hash",
        "**/*.hashes",
        "**/docs/**/*-Hashes.json",
        "**/docs/**/Hashes.json",
        "**/.cspellcache",
        "**/.cache/**",
        "**/cache/**",
        "**/coverage/**",
        "**/dist/**",
        "**/dist-electron/**",
        "**/node_modules/**",
        "**/.git/**",
        "**/.turbo/**",
        "**/.next/**",
        "**/.vite/**"
    ],
    "rules": [
        {
            "id": "@secretlint/secretlint-rule-preset-recommend",
            "rules": [
                {
                    "id": "@secretlint/secretlint-rule-aws",
                    "options": {
                        "allows": [
                            "AKIAIOSFODNN7EXAMPLE",
                            "123456789012"
                        ]
                    },
                    "allowMessageIds": [
                        "AWSAccountID"
                    ]
                },
                {
                    "id": "@secretlint/secretlint-rule-github",
                    "options": {
                        "allows": [
                            "ghp_1234567890123456789012345678901234567890",
                            "ghs_1234567890123456789012345678901234567890"
                        ]
                    }
                },
                {
                    "id": "@secretlint/secretlint-rule-slack",
                    "options": {
                        "allows": [
                            "xoxb-123456789012-123456789012-1234567890123456789012345678",
                            "xoxp-123456789012-123456789012-123456789012-1234567890123456789012345678901234567890"
                        ]
                    }
                },
                {
                    "id": "@secretlint/secretlint-rule-openai",
                    "options": {
                        "allows": [
                            "sk-proj-1234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890"
                        ]
                    }
                },
                {
                    "id": "@secretlint/secretlint-rule-npm",
                    "options": {
                        "allows": [
                            "npm_1234567890123456789012345678901234567890"
                        ]
                    }
                },
                {
                    "id": "@secretlint/secretlint-rule-basicauth",
                    "options": {
                        "allows": [
                            "dXNlcjpwYXNzd29yZA=="
                        ]
                    }
                }
            ]
        },
        {
            "id": "@secretlint/secretlint-rule-no-dotenv",
            "options": {
                "allows": [
                    ".env.example",
                    ".env.template",
                    ".env.sample"
                ]
            }
        },
        {
            "id": "@secretlint/secretlint-rule-no-homedir",
            "severity": "warning"
        },
        {
            "id": "@secretlint/secretlint-rule-pattern",
            "options": {
                "patterns": [
                    {
                        "name": "Discord Bot Token",
                        "pattern": "/(?:N[A-Za-z\\d]{23}\\.[\\w-]{6}\\.[\\w-]{27}|mfa\\.[\\w-]{84})/",
                        "message": "Found Discord Bot Token: {{MATCH}}"
                    },
                    {
                        "name": "Discord Webhook URL",
                        "pattern": "/https:\\/\\/discord(?:app)?\\.com\\/api\\/webhooks\\/\\d+\\/[\\w-]+/",
                        "message": "Found Discord Webhook URL: {{MATCH}}"
                    },
                    {
                        "name": "Firebase API Key",
                        "pattern": "/AIza[0-9A-Za-z\\-_]{35}/",
                        "message": "Found Firebase API Key: {{MATCH}}"
                    },
                    {
                        "name": "Stripe API Key",
                        "pattern": "/(?:sk|pk)_(?:test|live)_[0-9a-zA-Z]{24}/",
                        "message": "Found Stripe API Key: {{MATCH}}"
                    },
                    {
                        "name": "JWT Token",
                        "pattern": "/eyJ[A-Za-z0-9_-]+\\.[A-Za-z0-9_-]+\\.[A-Za-z0-9_-]+/",
                        "message": "Found JWT Token: {{MATCH}}"
                    },
                    {
                        "name": "Generic API Key",
                        "pattern": "/(?:api[_-]?key|auth[_-]?token|access[_-]?token|secret[_-]?key)['\"\\s]*[:=]['\"\\s]*[a-zA-Z0-9_-]{20,}/i",
                        "message": "Found Generic API Key: {{MATCH}}"
                    }
                ],
                "allows": [
                    "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c",
                    "AIzaSyDummy1234567890123456789012345678",
                    "sk_test_1234567890123456789012345678901234567890"
                ]
            }
        },
        {
            "id": "@secretlint/secretlint-rule-secp256k1-privatekey",
            "severity": "error"
        }
    ]
}