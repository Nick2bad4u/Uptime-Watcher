[Desktop Entry]
Version=1.5
Type=Application
Name=Uptime Watcher
GenericName=Website Monitor
Comment=Monitor website uptime and performance with real-time notifications
Exec=run-electron.sh %U
TryExec=run-electron.sh
Icon=io.github.uptimewatcher
StartupNotify=true
NoDisplay=false
Hidden=false
Terminal=false
Categories=Network;Monitor;System;GTK;
Keywords=uptime;monitoring;website;performance;network;availability;downtime;
MimeType=application/x-uptime-watcher;
Actions=new-monitor;settings;

[Desktop Action new-monitor]
Name=Add New Monitor
Exec=run-electron.sh --new-monitor

[Desktop Action settings]
Name=Settings
Exec=run-electron.sh --settings
