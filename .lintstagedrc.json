{
    "$schema": "https://www.schemastore.org/lintstagedrc.schema.json",
    "*.md": [
        "markdownlint --fix"
    ],
    "*.{js,jsx,ts,tsx,css,scss,md,json,yaml,yml}": [
        "prettier --write --cache",
        "eslint --fix --cache"
    ],
    "*.{css,scss}": [
        "stylelint --fix --cache"
    ]
}
