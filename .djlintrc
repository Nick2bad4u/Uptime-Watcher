{
    "$schema": "https://www.schemastore.org/djlint.json",
    "profile": "html",
    "extension": "html,htm",
    "indent": 4,
    "max_line_length": 120,
    "exclude": "dist/**/*,node_modules/**/*,coverage/**/*,release/**/*,docs/**/*,.vscode/**/*,.cache/**/*,.next/**/*,.nuxt/**/*,.svelte-kit/**/*,build/**/*,out/**/*,.gitignore",
    "ignore": "H006,H012,H013,H020,H025,H030,H031",
    "require_pragma": false,
    "preserve_leading_space": false,
    "preserve_blank_lines": true,
    "max_blank_lines": 2,
    "blank_line_after_tag": "true",
    "blank_line_before_tag": "true",
    "format_css": true,
    "format_js": true,
    "use_gitignore": true,
    "close_void_tags": true,
    "ignore_case": true
}
